<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="stateFactory" class="com.flying.framework.fsm.impl.DefaultStateFactory">
        <property name="states" ref="states"/>
    </bean>
    <bean id="states" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="1">  <!-- CREATED -->
                    <bean class="com.flying.framework.fsm.impl.DefaultState">
                        <constructor-arg value="1"/>
                        <property name="listeners">
                            <map>
                                <entry key="1">
                                    <list>
                                        <bean class="com.flying.oms.service.server.AccountValidator">
                                            <property name="stateFactory" ref="stateFactory"/>
                                            <property name="accountService" ref="accountService"/>
                                        </bean>
                                        <bean class="com.flying.oms.service.server.OrderSender">
                                            <property name="stateFactory" ref="stateFactory"/>
                                        </bean>
                                    </list>
                                </entry>
                            </map>
                        </property>
                    </bean>
                </entry>
                <entry key="3"> <!-- REJECTED -->
                    <bean class="com.flying.framework.fsm.impl.DefaultState">
                        <constructor-arg value="3"/>
                        <property name="finalState" value="true"/>
                    </bean>
                </entry>
                <entry key="4">
                    <bean class="com.flying.framework.fsm.impl.DefaultState">
                        <constructor-arg value="4"/>
                        <property name="finalState" value="true"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>
</beans>