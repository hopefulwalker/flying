<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="monitorServer" class="com.flying.monitor.MonitorServer">
        <constructor-arg type="java.lang.String" name="region" value="SZ"/>
        <constructor-arg type="short" name="type" value="1"/>
        <constructor-arg type="java.lang.String" name="name" value="MonitorServer-Walker"/>
        <property name="serverEngine" ref="monitorServerEngine"/>
        <property name="scheduler" ref="scheduler"/>
    </bean>

    <bean id="scheduler" class="com.flying.util.schedule.Scheduler">
        <constructor-arg name="tasks">
            <list>
                <ref bean="monitorReporter"/>
                <ref bean="monitorSweeper"/>
            </list>
        </constructor-arg>
        <property name="delay" value="5000"/>
        <property name="initialDelay" value="3000"/>
    </bean>
    <bean id="monitorServerEngine" class="com.flying.framework.messaging.engine.impl.zmq.ZMQBCServerEngine">
        <constructor-arg name="listenEndpoint" ref="monitorListenEndPoint"/>
        <property name="msgEventListener" ref="monitorMsgListener"/>
    </bean>
    <bean id="monitorReporter" class="com.flying.monitor.service.client.ServerReporter">
        <property name="server" ref="monitorServer"/>
        <property name="service" ref="bcMonitorClientService"/>
    </bean>
    <bean id="monitorSweeper" class="com.flying.monitor.service.server.ServerSweeper">
        <constructor-arg name="service" ref="monitorServerService"/>
    </bean>

    <bean id="monitorListenEndPoint" class="com.flying.framework.messaging.endpoint.impl.Endpoint">
        <constructor-arg type="java.lang.String" name="protocol" value="udp"/>
        <constructor-arg type="java.lang.String" name="address" value="*"/>
        <constructor-arg type="int" name="port" value="51688"/>
    </bean>
    <bean id="monitorMsgListener" class="com.flying.common.msg.handler.ServiceMsgListener">
        <constructor-arg name="handlers">
            <!-- Q_REGISTRY = 1; P_REGISTRY = 2; Q_QUERY = 3; P_QUERY = 4-->
            <map>
                <entry key="1">
                    <bean class="com.flying.monitor.msg.handler.ServerRegistryRequestHandler">
                        <constructor-arg name="service" ref="monitorServerService"/>
                        <constructor-arg name="msgConverter" ref="monitorMsgConverter"/>
                    </bean>
                </entry>
                <entry key="3">
                    <bean class="com.flying.monitor.msg.handler.ServerQueryRequestHandler">
                        <constructor-arg name="service" ref="monitorServerService"/>
                        <constructor-arg name="msgConverter" ref="monitorMsgConverter"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
        <constructor-arg name="msgConverter" ref="monitorMsgConverter"/>
    </bean>
    <bean id="bcMonitorClientService" class="com.flying.monitor.service.client.BCMonitorClientService">
        <constructor-arg name="engine" ref="broadcastEngine"/>
        <constructor-arg name="msgConverter" ref="monitorMsgConverter"/>
    </bean>
    <bean id="monitorServerService" class="com.flying.monitor.service.server.MonitorServerService"/>

    <bean id="broadcastEngine" class="com.flying.framework.messaging.engine.impl.jdk.BroadcastClientEngine" init-method="start" destroy-method="stop">
        <constructor-arg name="endpoints" ref="broadcastEndpoints"/>
    </bean>
    <bean id="monitorMsgConverter" class="com.flying.monitor.msg.converter.MonitorMsgConverter"/>

    <bean id="broadcastEndpoints" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <bean class="com.flying.framework.messaging.endpoint.impl.Endpoint">
                    <constructor-arg type="java.lang.String" name="protocol" value="udp"/>
                    <constructor-arg type="java.lang.String" name="address" value="255.255.255.255"/>
                    <constructor-arg type="int" name="port" value="51688"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>